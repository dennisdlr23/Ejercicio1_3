<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_3.Views.PageTwo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Nombres}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblresultado" />

            <Label Text="{Binding Apellidos}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblresultado2" />

            <Label Text="{Binding Edad}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblresultado3" />

            <Label Text="{Binding Correo}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblresultado4" />
            <Label Text="{Binding Direcicon}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblresultado5" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>